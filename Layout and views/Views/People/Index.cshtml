@model Layout_and_views.Models.PersonList
@using Layout_and_views.Models
@{
    ViewBag.Title = "People";
}

<h2>Index</h2>
<th>Name</th>
<th>City</th>
<th>Phone</th>
<table class="table-bordered table-hover table-striped">
    @for (int i = 0; i < Model.PersonSearch.Count(); i++)
    {
        <tr>
            <td>@Html.Raw(Model.Persons[i].Name)</td>
            <td>@Html.Raw(Model.Persons[i].City)</td>
            <td>@Html.Raw(Model.Persons[i].PhoneNumber)</td>
            <td>
                @Html.ActionLink(
                                     linkText: "Remove",
                                     actionName: "Remove",
                                     routeValues: new {id = Model.Persons[i].Id },
                                     htmlAttributes: new { @class = "btn btn-default" }
                                 )
            </td>
        </tr>
    }
</table>

@using (Html.BeginForm("Index", "People", FormMethod.Post))
{
    @Html.TextBoxFor(model => model.SearchString, new { placeholder = "search", @required = "false", @type = "text", value = "" })
    <input type="submit" value="submit" , class="btn btn-default">
    @Html.ActionLink(
                                             linkText: "Reset",
                                             actionName: "Index",
                                             routeValues: null,
                                             htmlAttributes: new { @class = "btn btn-default" }
                                         )

}
@using (Html.BeginForm("Add", "People", FormMethod.Post))
{
    <h3>Add person:</h3>
    <label for="name">Name:</label>
    <input type="text" name="name" required />
    <br />
    <label for="city">City:</label>
    <input type="text" name="city" required/>
    <br />
    <label for="phone">Phone:</label>
    <input type="text" name="phone" required/>
    <br />
    <br />

    <input type="submit" value="submit" , class="btn btn-default">
}
